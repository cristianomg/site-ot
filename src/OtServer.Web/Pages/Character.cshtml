@page "{name}"
@model CharacterModel
@using OtServer.Domain.Enums
@using OtServer.Domain.Extensions;
@{
    ViewData["Title"] = $"Personagem: {Model.Player?.Name ?? "Desconhecido"}";
}

<div class="container mt-4">
    <h1 class="glow mb-0">@Model.Player?.Name</h1>
    @if (Model.Player == null)
    {
        <div class="alert alert-danger">Personagem não encontrado.</div>
    }
    else
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">Informações Básicas</div>
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-6"><strong>Nome:</strong></div>
                            <div class="col-6">@Model.Player.Name</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6"><strong>Level:</strong></div>
                            <div class="col-6">@Model.Player.Level</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6"><strong>Sexo:</strong></div>
                            <div class="col-6">@Model.Player.Sex</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6"><strong>Vocação:</strong></div>
                            <div class="col-6">@(((VocationEnum)Model.Player.Vocation).GetDescription())</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6"><strong>Resets:</strong></div>
                            <div class="col-6">@Model.Player.Resets</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6"><strong>Status:</strong></div>
                            <div class="col-6">@(Model.Player.Access > 0 ? "STAFF" : "Player")</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6"><strong>Último Login:</strong></div>
                            <div class="col-6">@Model.Player.LastLogin</div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-header">Guilda</div>
                    <div class="card-body">
                       @if(Model.Player.Guild != null) 
                       {
                            <div class="row mb-2">
                                <div class="col-6"><strong>Guilda:</strong></div>
                                @* <div class="col-6">@(Model.Player.Guild?.Name ?? "-")</div> *@
                            </div>
                            <div class="row mb-2">
                                <div class="col-6"><strong>Rank:</strong></div>
                                <div class="col-6">@Model.Player.GuildRank</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6"><strong>Nick:</strong></div>
                                <div class="col-6">@Model.Player.GuildNick</div>
                            </div>
                       }
                       else {
                           <span class="text-muted">O player não participa de nenhuma guild.</span>
                       }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">Atributos</div>
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-6"><strong>Vida:</strong></div>
                            <div class="col-6">@Model.Player.Health/@Model.Player.HealthMax</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6"><strong>Mana:</strong></div>
                            <div class="col-6">@Model.Player.Mana/@Model.Player.ManaMax</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6"><strong>Soul:</strong></div>
                            <div class="col-6">@Model.Player.Soul/@Model.Player.SoulMax</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6"><strong>Capacidade:</strong></div>
                            <div class="col-6">@Model.Player.Cap</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6"><strong>Experiência:</strong></div>
                            <div class="col-6">@Model.Player.Experience</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6"><strong>Magic Level:</strong></div>
                            <div class="col-6">@Model.Player.MagicLevel</div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">Mortes Recentes</div>
                    <div class="card-body">
                        @if (Model.Deaths != null && Model.Deaths.Count > 0)
                        {
                            <ul class="list-group">
                                @foreach (var death in Model.Deaths)
                                {
                                    <li class="list-group-item">
                                        <span class="text-muted">@death.Date</span> - @death.Description
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">Nenhuma morte recente encontrada.</span>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">Outros Personagens na Conta</div>
                    <div class="card-body">
                        @if (Model.OtherCharacters != null && Model.OtherCharacters.Count > 0)
                        {
                            <ul class="list-group">
                                @foreach (var p in Model.OtherCharacters)
                                {
                                    <li class="list-group-item">
                                        <a href="/Character/@p.Name" class="fw-bold">@p.Name</a> - Level @p.Level - @p.Vocation
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">Nenhum outro personagem encontrado.</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div> 