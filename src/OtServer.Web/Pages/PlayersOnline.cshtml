@page
@model OtServer.Web.Pages.PlayersOnlineModel
@using OtServer.Domain.Extensions;
@{
    ViewData["Title"] = "Players Online";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card medieval-card">
                <div class="card-header">
                    <h2 class="text-center mb-0">
                        <span class="glow">ðŸ‘¥</span> Players Online 
                        <span class="badge bg-secondary fs-6 ms-2">@Model.PlayersOnline.Count</span>
                    </h2>
                </div>
                <div class="card-body">
                    @if (Model.PlayersOnline.Any())
                    {
                        <div class="row">
                            @foreach (var player in Model.PlayersOnline)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card player-card h-100">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h5 class="card-title mb-0">
                                                    <a href="/Character?name=@player.Name" class="text-decoration-none player-link">
                                                        @player.Name
                                                    </a>
                                                </h5>
                                                <span class="badge bg-secondary">Level @player.Level</span>
                                            </div>
                                            
                                            <div class="row text-center mb-3">
                                                <div class="col-4">
                                                    <small class="text-muted d-block">VocaÃ§Ã£o</small>
                                                    <span class="fw-bold">@player.Vocation.GetVocationName()</span>
                                                </div>
                                                <div class="col-4">
                                                    <small class="text-muted d-block">Magic Level</small>
                                                    <span class="fw-bold">@player.MagicLevel</span>
                                                </div>
                                                <div class="col-4">
                                                    <small class="text-muted d-block">ExperiÃªncia</small>
                                                    <span class="fw-bold">@player.Experience.ToString("N0")</span>
                                                </div>
                                            </div>
                                            
                                            @if (!string.IsNullOrEmpty(player.Guild?.GuildName))
                                            {
                                                <div class="text-center">
                                                    <small class="text-muted">Guilda</small>
                                                    <div class="fw-bold text-light">@player.Guild.GuildName</div>
                                                    @if (!string.IsNullOrEmpty(player.GuildRank))
                                                    {
                                                        <small class="text-muted">@player.GuildRank</small>
                                                    }
                                                </div>
                                            }
                                            
                                            <div class="mt-3">
                                                <div class="progress mb-2" style="height: 8px;">
                                                    <div class="progress-bar bg-secondary" 
                                                         style="width: @((player.Health * 100) / player.HealthMax)%" 
                                                         title="HP: @player.Health/@player.HealthMax"></div>
                                                </div>
                                                <div class="progress" style="height: 8px;">
                                                    <div class="progress-bar bg-dark" 
                                                         style="width: @((player.Mana * 100) / player.ManaMax)%" 
                                                         title="MP: @player.Mana/@player.ManaMax"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="display-1 text-muted mb-3">ðŸ’€</div>
                            <h3 class="text-muted">Nenhum jogador online</h3>
                            <p class="text-muted">As masmorras estÃ£o vazias neste momento...</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.player-card {
    background: linear-gradient(135deg, #2a2a2a 0%, #3a3a3a 100%);
    border: 1px solid #555;
    transition: all 0.3s ease;
}

.player-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    border-color: #777;
}

.player-link {
    color: #ddd;
    transition: color 0.3s ease;
}

.player-link:hover {
    color: #fff;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
}

.progress {
    background-color: #444;
    border-radius: 4px;
}

.progress-bar {
    border-radius: 4px;
}

.badge {
    font-weight: 500;
}
</style> 